# Telegram Worker Environment Variables
# Copy this file to .env in the worker directory or set these in your hosting platform

# Database Configuration (REQUIRED)
MONGODB_URI="mongodb+srv://username:password@cluster.mongodb.net/chatbotdb"
MONGODB_DB="chatbotdb"

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Optional: Polling interval in milliseconds (default: 1000)
# POLLING_INTERVAL=1000

